<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<ImageView
		android:id="@+id/logo"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:src="@drawable/dribble"
		android:layout_centerHorizontal="true"
		android:layout_gravity="center_horizontal"
		android:padding="1dip"
		android:layout_alignParentTop="true" />

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
 
    <com.dribble.dribbleapp.DashboardLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
 
        <Button android:id="@+id/dashboard_button_nearme"
            style="@style/DashboardButton"
            android:text="@string/activity_nearme"
            android:drawableTop="@drawable/drib_icon_2" />
 
        <Button android:id="@+id/dashboard_button_createDrib"
            style="@style/DashboardButton"
            android:text="@string/activity_createDrib"
            android:drawableTop="@drawable/drib_icon_2" />
 
        <Button android:id="@+id/dashboard_button_map"
            style="@style/DashboardButton"
            android:text="@string/activity_map"
            android:drawableTop="@drawable/drib_icon_2" />
 
        <Button android:id="@+id/dashboard_button_help"
            style="@style/DashboardButton"
            android:text="@string/activity_help"
            android:drawableTop="@drawable/drib_icon_2" />    
 
    </com.dribble.dribbleapp.DashboardLayout>
 
</LinearLayout>

</LinearLayout>